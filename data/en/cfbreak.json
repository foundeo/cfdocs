{
	"name":"cfbreak",
	"type":"tag",
	"syntax":"<cfbreak>",
	"script":"break;",
	"related":["cfloop"],
	"description":"Used within a cfloop tag. Breaks out of a loop.",
	"params": [
	],
	"engines": {
		"coldfusion": {"minimum_version":"3", "notes":"", "docs":"https://helpx.adobe.com/coldfusion/cfml-reference/coldfusion-tags/tags-a-b/cfbreak.html"},
		"lucee": {"minimum_version":"", "notes":"", "docs":"https://docs.lucee.org/reference/tags/break.html"},
		"railo": {"minimum_version":"", "notes":"", "docs":"http://railodocs.org/index.cfm/tag/cfbreak"},
		"openbd": {"minimum_version":"", "notes":"", "docs":"http://openbd.org/manual/?/tag/cfbreak"}
	},
	"links": [

	],
	"examples": [
		{
			"title": "Break out of a for loop",
			"description": "Example Using Script Syntax",
			"code": "for (i=1; i <= 10; i++){\r\n    writeOutput(\"#i#<br>\");\r\n    if (i >= 5){\r\n        break;\r\n    }\r\n}",
			"result": "1 2 3 4 5"
		},
        {
            "title": "Break out of a CFLoop",
            "description": "Shows tag based syntax.",
            "code": "<cfloop index=\"i\" from=\"1\" to=\"10\">\r\n    <cfoutput>#i#</cfoutput><br>\r\n     <cfif i Ge 5>\r\n        <cfbreak>\r\n    </cfif>\r\n</cfloop>",
            "result": "1 2 3 4 5"
        }
	]

}
