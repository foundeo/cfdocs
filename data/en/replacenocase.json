{
	"name":"replaceNoCase",
	"type":"function",
	"syntax":"replaceNoCase(String, substring1, substring2 [, scope])",
	"returns":"string",
	"related":[],
	"description":" Replaces occurrences of substring1 with substring2, in the\n specified scope. The search is case-insensitive.",
	"params": [
		{"name":"String","description":"A string (or variable that contains one) within which to\n replace substring","required":true,"default":"","type":"string","values":[]},
		{"name":"substring1","description":"","required":true,"default":"","type":"string","values":[]},
		{"name":"substring2","description":"","required":true,"default":"","type":"string","values":[]},
		{"name":"scope","description":"* one: Replace the first occurrence (default)\n * all: Replace all occurrences","required":false,"default":"","type":"string","values":["one","all"]}

	],
