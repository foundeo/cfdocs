{
	"name":"cfdirectory",
	"type":"tag",
	"syntax":"<cfdirectory directory=\".\" action=\"list|create|delete|rename\">",
	"script": "directoryList(\".\", false, \" \");",
	"related":["directorylist","directorycreate","directorydelete","directoryexists"],
	"description":"Allows you to list, create, delete or rename a directory in the server file system.",
	"params": [
		{"name":"action","description":"Action to perform","required":false,"default":"list","type":"string","values":["list","create","delete","rename"]},
		{"name":"directory","description":"Absolute pathname of directory against which to perform action.","required":true,"default":"","type":"string","values":[]},
		{"name":"name","description":"Name for output record set.","required":false,"default":"","type":"string","values":[]},
		{"name":"filter","description":"Filter applied to returned names. For example: *.cfm\nYou can use a pipe (\"|\") delimiter to specify multiple filters. For example: *.cfm|*.cfc\nFilter pattern matches are case-sensitive on UNIX and Linux.","required":false,"default":"","type":"string","values":[]},
		{"name":"mode","description":"Applies only to UNIX and Linux. Permissions. Octal values of Unix chmod command. Assigned to owner, group, and other, respectively.","required":false,"default":"","type":"string","values":[]},
		{"name":"sort","description":"Query column(s) by which to sort directory listing.\n Delimited list of columns from query output.","required":false,"default":"asc","type":"string","values":["asc","desc"]},
		{"name":"newdirectory","description":"New name for directory.","required":false,"default":"","type":"string","values":[]},
		{"name":"recurse","description":"Whether ColdFusion performs the action on subdirectories.","required":false,"default":false,"type":"boolean","values":[]},
		{"name":"type","description":"","required":false,"default":"all","type":"string","values":["dir","file","all"]},
		{"name":"listinfo","description":"","required":false,"default":"all","type":"string","values":["name","all"]}
	],
	"engines": {
		"coldfusion": {"minimum_version":"3", "notes":"", "docs":"https://helpx.adobe.com/coldfusion/cfml-reference/coldfusion-tags/tags-d-e/cfdirectory.html"},
		"lucee": {"minimum_version":"", "notes":"In Lucee the filter param can be a closure as well where the path is passed in.\n\nIt seems that there is no way to access the file query. If a directory returns false in recursive mode the contained files are processed anyways", "docs":"https://docs.lucee.org/reference/tags/directory.html"},
		"railo": {"minimum_version":"", "notes":"", "docs":"http://railodocs.org/index.cfm/tag/cfdirectory"},
		"openbd": {"minimum_version":"", "notes":"", "docs":"http://openbd.org/manual/?/tag/cfdirectory"}
	},
	"links": [
		{
		    "title":"Railo tip: use a custom function for the cfdirectory \"filter\" attribute",
		    "description":"Paul Klinkenberg shows an example usage of filter parameter as a closure",
		    "url":"http://www.lucee.nl/post.cfm/railo-tip-use-a-custom-function-for-the-cfdirectory-filter-attribute"
		},
		{
		    "title":"Enhance closure filter on directory copy (Lucee Development / LDEV-1542)",
		    "description":"Support ticket by Brad Wood describing the filter misbehavior in recursive mode",
		    "url":"https://luceeserver.atlassian.net/browse/LDEV-1542"
		}
	],
	"examples": [
	        {
	            "title": "List Files in Directory (Script Syntax)",
	            "description": "Returns a query",
	            "code": "myList = directoryList(expandPath(\"./\"), false, \"query\");",
	            "result": ""
	        },
	        {
	            "title": "Create a Directory (Script Syntax)",
	            "description": "",
	            "code": "directoryCreate(expandPath(\"./new_directory\"));",
	            "result": ""
	        },
	        {
	            "title": "Delete a Directory (Script Syntax)",
	            "description": "Directory Delete",
	            "code": "directoryDelete(expandPath(\"./my_directory\"));",
	            "result": ""
	        },
	        {
	            "title": "Rename a Directory (Script Syntax)",
	            "description": "",
	            "code": "directoryRename(expandPath(\"./my_directory\"), expandPath(\"./new_directory\"));",
	            "result": ""
	        },
	        {
			"title": "List File in Directory (Tag Syntax)",
			"description": "Directory List",
			"code": "<cfdirectory action=\"list\" directory=\"#expandPath(\"./\")#\" recurse=\"false\" name=\"myList\">",
			"result": ""
		},
		{
			"title": "Create a Directory (Tag Syntax)",
			"description": "",
			"code": "<cfdirectory action=\"create\" directory=\"#expandPath(\"./new_directory\")#\">",
			"result": ""
		},
		{
			"title": "Delete a Directory (Tag Syntax)",
			"description": "",
			"code": "<cfdirectory action=\"delete\" directory=\"#expandPath(\"./my_directory\")#\">",
			"result": ""
		},
		{
			"title": "Rename a Directory (Tag Syntax)",
			"description": "",
			"code": "<cfdirectory action=\"rename\" directory=\"#expandPath(\"./my_directory\")#\" newdirectory=\"#expandPath(\"./new_directory\")#\">",
			"result": ""
		}
	]
}
